// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model OpeningHours {
  id Int @id @default(autoincrement())
  mondayStart DateTime @default(now())
  mondayEnd DateTime @default(now())
  tuesdayStart DateTime @default(now())
  tuesdayEnd DateTime @default(now())
  wednesdayStart DateTime @default(now())
  wednesdayEnd DateTime @default(now())
  thursdayStart DateTime @default(now())
  thursdayEnd DateTime @default(now())
  fridayStart DateTime @default(now())
  fridayEnd DateTime @default(now())
  saturdayStart DateTime @default(now())
  saturdayEnd DateTime @default(now())
  sundayStart DateTime @default(now())
  sundayEnd DateTime @default(now())
}

model VisitorCount {
  id Int @id @default(autoincrement())
  count Int
}