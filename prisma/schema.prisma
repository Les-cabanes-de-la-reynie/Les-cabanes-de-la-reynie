// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model OpeningHours {
  id Int @id @default(autoincrement())
  mondayStart DateTime
  mondayEnd DateTime
  tuesdayStart DateTime
  tuesdayEnd DateTime
  wednesdayStart DateTime
  wednesdayEnd DateTime
  thursdayStart DateTime
  thursdayEnd DateTime
  fridayStart DateTime
  fridayEnd DateTime
  saturdayStart DateTime
  saturdayEnd DateTime
  sundayStart DateTime
  sundayEnd DateTime
}

model VisitorCount {
  id Int @id @default(autoincrement())
  count Int
}

model Image {
  id       String @id @default(cuid())
  imageKey String
  imageUrl String
  category String
}